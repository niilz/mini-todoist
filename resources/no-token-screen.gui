<svg>
  <defs>
    <symbol id="no-token-screen">
      <animate
        attributeName="opacity"
        begin="enable"
        from="0"
        to="1"
        dur="0.2"
      />
      <animate
        attributeName="opacity"
        begin="disable"
        from="1"
        to="0"
        dur="0.2"
      />
      <use id="no-token-msg" class="warning" href="#mixed-text-center-mid">
        <set
          href="#header/text"
          attributeName="text-buffer"
          to="Kein API-Token"
        />
        <set
          href="#copy/text"
          attributeName="text-buffer"
          to="Bitte API-Token in Settings angeben."
        />
      </use>
    </symbol>
  </defs>
</svg>
